picker{
  border: solid 1px #E0E0E0;
  border-radius: 6px;
  background-color: #F8F8F8;
  margin-top: 10px;
  padding: 8px 0;
  /* width: 240px; */
  /* line-height: 16px; */
  text-align: center;
}

picker .tips{
  /* border: 1px solid green; */
  margin-left: 8px;
  color: #808080;
}
picker .options{
  /* border: solid 1px blue; */
  font-weight: bold;
}
.picker .little{
  font-size: smaller;
  color: #A7ACB2;
}

textarea{
  border: 1px solid #E0E0E0;
  width: 100%;
  margin-top: 32px;
}

button{
  margin-top: 16px;
}

.result{
  width: 100%;
  height: 100px;
  overflow: auto;
  margin-top: 16px;
  background-color: #F8F8F8;
